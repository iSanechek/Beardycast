<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_centerInParent="true"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView android:src="@drawable/error_loader"
               android:layout_width="@dimen/error_icon_width"
               android:layout_height="@dimen/error_icon_height"
               tools:ignore="ContentDescription"/>

    <pttextview.widget.PTTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_message"
            app:typeface="pt_sans_bold_italic"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="@dimen/error_message_marginTop">

    </pttextview.widget.PTTextView>
</LinearLayout>