<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelTextView">

        <attr name="backgroundColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="numColor" format="color"/>

        <attr name="text" format="string"/>
        <attr name="num" format="string"/>

        <attr name="numSize" format="dimension"/>
        <attr name="textSize" format="dimension"/>

        <attr name="labelTopPadding" format="dimension"/>
        <attr name="labelCenterPadding" format="dimension"/>
        <attr name="labelBottomPadding" format="dimension"/>


        <attr name="numStyle">
            <enum name="normal" value="0"/>
            <enum name="italic" value="1"/>
            <enum name="bold" value="2"/>
        </attr>

        <attr name="textStyle_my">
            <enum name="normal" value="0"/>
            <enum name="italic" value="1"/>
            <enum name="bold" value="2"/>
        </attr>

        <attr name="direction">
            <enum name="leftTop" value="-45"/>
            <enum name="rightTop" value="45"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="ProgressViewB">
        <attr name="morph" format="integer" />
    </declare-styleable>

    <declare-styleable name="PlayButtonB">
        <attr name="mode" format="enum">
            <enum name="play" value="0" />
            <enum name="pause" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CoverView">
        <attr name="shape" format="enum">

            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />

        </attr>
        <attr name="trackAlpha" format="integer" />
    </declare-styleable>
    <declare-styleable name="PullToRefreshView">
        <attr name="lrefresh" format="enum">
            <enum name="rocket" value="0" />
            <enum name="sun" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="TextViewLabel">
        <attr name="labelColor" format="color|reference"/>
    </declare-styleable>
</resources>